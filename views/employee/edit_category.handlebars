<section class="width_container">
    <div class="greeting_msg">
        {{> database_welcome_msg}}
        <p>Edit Category '{{category_info.title}}' Below</p> 
    </div>
</section>
<section class="width_container">
    <div class="table_container">
        <table>
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th>Category Photo</th>
                </tr>   
            </thead>
            <tbody>
                <tr>
                    <td>{{category_info.title}}</td>
                    <td>{{category_info.description}}</td>
                    <td><img src={{category_info.image_path}}"" alt="" width="128px" height="128px"></td>
                </tr> 
            </tbody>
        </table>
    </div>
    <form action="/employee/edit-stock/edit-category/:id?method=put" method="POST" class="form_class">
        <div>
            <div class="form_input_container">
                <label for="category_name">Category Name</label>
                <input type="text" name="category_name" id="category_name" value="{{category_info.title}}">
            </div>
 
            <div class="form_input_container">
                <label for="category_description">Category Description</label>
                <textarea name="category_description" id="category_description" cols="30" rows="10">{{#if category_info.description}}{{category_info.description}}{{else}}{{/if}}</textarea>
            </div>

            <div class="form_input_container">
                <label for="category_photo">Category Image Path</label>
                <input type="text" name="category_photo" id="category_photo" value="{{category_info.image_path}}">
            </div>
        </div>
        <div>
            <button type="submit" class="button_class product_button">Accept Changes <i class="fas fa-arrow-right"></i></button>
            <a href="/employee/edit-stock/categories" class="button_class product_button"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </form>
</section>