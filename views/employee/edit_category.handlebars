<section class="width_container">
    <div class="greeting_msg">
        {{> database_welcome_msg}}
        <p>Edit Category Below</p>
    </div>
</section>
<section class="width_container">
    <div class="table_container">
        <table>
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th>Category Photo</th>
                </tr>   
            </thead>
            <tbody>
                <tr>
                    <td>{{ph}}</td>
                    <td>{{ph}}</td>
                    <td>{{ph}}</td>
                </tr> 
            </tbody>
        </table>
    </div>
    <form action="/employee/edit-stock/edit-category/:id?method=put" method="POST" class="form_class">
        <div>
            <div class="form_input_container">
                <label for="category_name">Category Name</label>
                <input type="text" name="category_name" id="category_name">
            </div>
 
            <div class="form_input_container">
                <label for="category_description">Category Description</label>
                <input type="text" name="category_description" id="category_description">
            </div>

            <div class="form_input_container">
                <label for="category_photo">Category Photo URL</label>
                <input type="text" name="category_photo" id="category_photo">
            </div>
        </div>
        <div>
            <button type="submit" class="button_class product_button">Accept Changes <i class="fas fa-arrow-right"></i></button>
            <a href="/employee/edit-stock" class="button_class product_button"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </form>
</section>