<section class="width_container">
    <div class="greeting_msg">
        {{> database_welcome_msg}}
        <p>View and Edit Categories Below</p>
    </div>
</section>
<section class="width_container">
    <div>
        <a class="button_class product_button" href="/employee/edit-stock/products">View Product Database</a>  
        <a href="/employee/edit-stock/add-categories" class="button_class product_button"><i class="fas fa-plus"></i> Add Categories</a>
    </div>
    <div class="create_success_msg">
        <p>{{message}}</p>
    </div>
    <div class="table_container">
        <table>
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Category Description</th>
                    <th>Category Image Path</th>
                    <th>Category Image</th>
                    <th class="edit_th">Edit/Delete</th>
                </tr>   
            </thead>
            <tbody>

                {{#each categories}}

                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.image_path}}</td>
                        <td><img src="{{this.image_path}}" alt="" width="128px" height="128px"></td>
                        <td class="edit_td"><a href="/employee/edit-stock/edit-category" class="button_class"><i class="far fa-plus-square"></i></a></td>
                    </tr> 

                {{else}}

                    <tr>
                        <td colspan="4">No Categories Available</td>
                        <td class="edit_td"><a href="/employee/edit-stock/edit-category" class="button_class"><i class="far fa-plus-square"></i></a></td>
                    </tr>

                {{/each}}
                
            </tbody>
        </table>
    </div>
</section>